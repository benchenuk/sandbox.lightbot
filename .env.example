# Example environment configuration for LightBot
# Copy this to .env and fill in your values

# OpenAI API Key (only needed if using OpenAI provider)
OPENAI_API_KEY=your-api-key-here

# Custom Ollama URL (optional, defaults to http://localhost:11434)
OLLAMA_BASE_URL=http://localhost:11434

# SearXNG Instance URL (optional, only needed if using SearXNG search)
SEARXNG_URL=http://localhost:8080
